{
  "name": "dupilot-backend-dev",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "api",
  "overrideCommand": false,
  "postCreateCommand": "pip install -r requirements.txt && pip install black isort", // [변경 후]
  "workspaceFolder": "/workspace",
  "remoteUser": "root",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.aws,target=/root/.aws,type=bind,consistency=cached"
  ],
  "forwardPorts": [8000, 27017],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "ms-python.black-formatter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3.11",
        "editor.formatOnSave": true,
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        // Python 확장 프로그램에게 black을 쓰라고 알려주는 설정 추가
        "python.formatting.provider": "black",
        "python.formatting.blackPath": "/usr/local/bin/black",
        "files.eol": "\n",
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    }
  }
}